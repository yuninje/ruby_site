<%= form_with(:model => [@genre, @post], :local => true) do |form|%>
    <%= hidden_field_tag :page, @page %>
    <div class = "group">
        <%= form.label(:genre) %><br>
        <%= form.label(@genre.name)%>
    </div>
    <div class = "group">
        <%= form.label(:Title) %><br>
        <%= form.text_field(:title, :class => "form-control")%>
    </div>

    <div class = "group">
        <%= form.label(:Text) %><br>
        <%= form.cktext_area(:text, :class => "form-control")%>
    </div>

    <div class="actions">
        <%= form.submit "post",:class => "btn btn-primary" %>
    </div>
<% end %>