<div class="col-lg-8">
    <!-- Title -->
     <h3> <%= @post.genre %> </h3>
     <h1 class="mt-4 text-center" > <%= @post.title %> </h1>

    <p class="lead text-right">
        by  <%= User.find(@post.author_id).user_id %>   
    </p>
    <p class="text-right" > <%= @post.created_at.localtime.strftime("%Y-%m-%d %H:%M")%> </p>
    <hr>

    <%= @post.text %>

    <hr>

    <!-- Add Comments Form -->
    <% if current_user%>
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
            <%= form_tag(:controller => "comments", :action => "create", :post_id => @post.id) do %>
                <%= content_tag(:div, :class => "form-group") do -%>
                    <%= text_area_tag :body, "", :class => "form-control", rows: "3"%>
                <% end%>
                <%= submit_tag("Comment", :class => "btn btn-primary")%>
            <% end%>
            </div>
        </div>
    <%end%>

    <!-- Comment List -->
    <% @comments.each do |comment| %>
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
                <h5 class="mt-0 push-left" > <%= User.find(comment.commenter_id).user_id%></h5>
                <p><%= comment.body%></p>
                <div class="text-right">
                    <a><%= comment.created_at.localtime.strftime("%Y-%m-%d %H:%M")%></a>
                    <% if current_user %>
                        <% if current_user.id == comment.commenter_id%>
                            <a> <%= link_to "delete", {:controller => "comments", :action => "destroy", :comment_id => comment.id, :post_id => @post.id} %></a>
                        <% end%>
                    <%end%>
                </div>
            </div>
        </div>
    <% end %>
</div>

<% if current_user%>
    <% if @post.author_id == current_user.id%>
        <%= link_to "edit", { :controller => "posts", :action => "edit" , :post_id => @post.id} %>
        <%= link_to "delete", {:controller => "posts", :action => "destroy", :post_id => @post.id},   
              :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    <% end %>
<% end %>
<%= link_to "list", { :controller => "posts", :action => "index" , :genre => @post.genre, :page => @before_page} %>