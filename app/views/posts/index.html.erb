<h1 > <%= @genre %> 게시판 </h1>

<% if @page%>
    <div class ="text-right">
        <%= select_tag(:sort, options_for_select([['Date','Date'],
            ['Good','Good'], ['View','View']])) %>
    </div>
    <%= render 'show_genre_form', :posts => @posts%>
    <div class="text-right">
        <% if current_user %>
            <%= link_to "New", :controller => "posts", :action => "new", :genre => @genre%>
        <% end%>
    </div>
<% else %>
    <%= render 'show_best50_form', :posts => @posts, :page => 1%>
<%end%>

