<h1>게시글 수정</h1>
<%= form_tag(:controller => "posts", :action => "update", :post_id => @post.id, :page => @page) do %>
    <div class = "form-group">
        <%= label_tag "genre" %><br>
        <%= label_tag @post.genre %>
    </div>

    <div class = "form-group">
        <%= label_tag "title" %><br>
        <%= text_field_tag(:title,@post.title, :class => "form-control") %>
    </div>

    <div class = "form-group">
        <%= label_tag "text" %><br>
        <%= text_area_tag(:text , @post.text,  :class => "form-control")%>
    </div>

    <%= submit_tag("Edit", :class => "btn btn-primary")%>
<% end %>