
  <h3> <%= link_to genre, { :controller => "posts", :action => "index", :genre => genre, :page => 1}%></h3> 
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" class="text-center">Title</th>
      <th scope="col" class="text-center">Date</th>
    </tr>
  </thead>
  
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td scope="col" class="text-center"> <%= link_to post.title, :controller => "posts", :action => "show", :page => 1%></td>
        <td scope="col" class="text-center"> <%= post.created_at.localtime.strftime("%Y-%m-%d") %> </td>
      </tr>
    <% end %>
  </tbody>
</table>