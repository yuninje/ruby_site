<h1> game </h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" class="text-center">#</th>
      <th scope="col" class="text-center">Title</th>
      <th scope="col" class="text-center">Author</th>
      <th scope="col" class="text-center">Date</th>
      <th scope="col" class="text-center">View </th>
    </tr>
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="col" class="text-center"> <%= post.id %></th>
        <td scope="col" class="text-center"> <%= link_to post.title, {controller: "posts", action: "show"}%></td>
        <td scope="col" class="text-center"> <%= post.author %> </td>
        <td scope="col" class="text-center"> <%= post.created_at.localtime.strftime("%Y-%m-%d") %> </td>
        <td scope="col" class="text-center"> <%= post.view_count %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to("New", :action => "new" , :controller => "posts") %>
